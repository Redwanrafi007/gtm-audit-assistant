{
  "manifest_version": 3,
  "name": "GTM Audit Assistant",
  "version": "1.0.0",
  "description": "Audit Google Tag Manager containers like a pro.",
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://gtm-audit-backend-8q9x.onrender.com/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
}